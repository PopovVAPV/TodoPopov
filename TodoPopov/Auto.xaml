<Window x:Class="TodoPopov.Auto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoPopov"
        mc:Ignorable="d"
        Title="Auto" Height="250" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Width="250" Margin="5,50,0,0">
                <TextBlock Text="Логин"></TextBlock>
                <PasswordBox></PasswordBox>
                <TextBlock Text="Пароль"></TextBlock>
                <TextBox></TextBox>
        </StackPanel>

        <Button Grid.Row="1" Height="20" Width="100" Content="Войти"></Button>
        
    </Grid>
</Window>
