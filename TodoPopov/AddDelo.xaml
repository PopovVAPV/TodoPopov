<Window x:Class="TodoPopov.AddDelo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoPopov"
        mc:Ignorable="d"
        Title="AddDelo" Height="250" Width="450">
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>






        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Название дела"></TextBlock>
            <TextBox x:Name="AddDe" Height="30" Width="300"></TextBox>
        </StackPanel>

        <Button Grid.Row="1" Height="20" Width="150" Content="Добавить дело" Click="Button_Click"/>

    </Grid>
</Window>
